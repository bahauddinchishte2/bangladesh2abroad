---
import Layout from '../layouts/Layout.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import CurrentOpportunities from '../components/CurrentOpportunities.astro';
import SearchBar from '../components/SearchBar.astro';
import { getCollection } from 'astro:content';

// Get all posts for search functionality
const allPosts = await getCollection('blog');

// Prepare opportunities data for search
const opportunitiesData = allPosts.map(post => ({
  title: post.data.title,
  country: post.data.country,
  fundingType: post.data.fundingType,
  levelOfStudy: post.data.levelOfStudy,
  category: post.data.category,
  tags: post.data.tags,
  slug: post.slug
}));
---

<Layout 
  title="Home"
  description="Find scholarships, fellowships, and internship opportunities for Bangladeshi students looking to study and work abroad."
  keywords={["scholarships", "fellowships", "internships", "study abroad", "Bangladeshi students", "international education"]}
>
  <!-- Hero Section with animated gradient background -->
  <div class="min-h-[85vh] flex items-center justify-center bg-white relative pb-16 border border-gray-100">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 z-10">
      <!-- Main Hero Content -->
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-white shadow-xl p-8 sm:p-12 md:p-16 rounded-3xl border border-gray-100">
