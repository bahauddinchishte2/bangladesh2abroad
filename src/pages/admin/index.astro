---
import Layout from '../../layouts/Layout.astro';
import AdminLogin from '../../components/admin/AdminLogin';
---

<Layout title="Admin Dashboard">
  <div class="min-h-screen bg-gray-50">
    <div class="flex items-center justify-center min-h-screen">
      <AdminLogin client:load />
    </div>
  </div>
</Layout>
      <div class="flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-white shadow-md min-h-screen">
          <div class="p-4">
            <h2 class="text-lg font-semibold text-[rgb(71,85,105)]">Dashboard</h2>
          </div>
          <nav class="mt-4">
            <a href="/admin/scholarships" class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-50">
              Scholarships
            </a>
            <a href="/admin/opportunities" class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-50">
              Opportunities
            </a>
            <a href="/admin/resources" class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-50">
              Resources
            </a>
            <a href="/admin/blog" class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-50">
              Blog Posts
            </a>
          </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-8">
          <h1 class="text-2xl font-bold text-[rgb(71,85,105)] mb-6">Welcome to Admin Dashboard</h1>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Stats Cards -->
            <div class="bg-white p-6 rounded-lg shadow-sm">
              <h3 class="text-lg font-medium text-[rgb(71,85,105)]">Total Scholarships</h3>
              <p class="text-3xl font-bold mt-2">24</p>
            </div>
            
            <div class="bg-white p-6 rounded-lg shadow-sm">
              <h3 class="text-lg font-medium text-[rgb(71,85,105)]">Total Opportunities</h3>
              <p class="text-3xl font-bold mt-2">18</p>
            </div>
            
            <div class="bg-white p-6 rounded-lg shadow-sm">
              <h3 class="text-lg font-medium text-[rgb(71,85,105)]">Total Resources</h3>
              <p class="text-3xl font-bold mt-2">12</p>
            </div>
            
            <div class="bg-white p-6 rounded-lg shadow-sm">
              <h3 class="text-lg font-medium text-[rgb(71,85,105)]">Blog Posts</h3>
              <p class="text-3xl font-bold mt-2">8</p>
            </div>
          </div>
        </main>
      </div>
    )}
  </div>
</Layout>