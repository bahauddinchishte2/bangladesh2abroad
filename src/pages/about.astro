---
import Layout from '../layouts/Layout.astro';

const teamMembers = [
  {
    name: 'Bahauddin Chishte',
    role: 'Founder, CTO & Product Lead',
    image: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Sarah',
    description: 'Aspiring international student with a passion for leveraging technology to help others achieve their goals.'
  },
  {
    name: 'Md Waqif Hossain',
    role: 'Co-founder & Chief Advisor',
    image: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Kamal',
    description: 'Experienced education consultant specializing in study abroad and admission counselling. A Bangladeshi born Finnish citizen with extensive knowledge of international education systems.'
  },
  {
    name: 'Shaha',
    role: 'Co-founder & Operations Manager',
    image: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Nadia',
    description: 'Detail-oriented operations manager with a strong background in design and project coordination.'
  }
];


const contactInfo = {
  email: 'contact@bangladeshtoabroad.com',
  facebook: 'https://facebook.com/bangladeshtoabroad',
  twitter: 'https://twitter.com/bd2abroad',
  linkedin: 'https://linkedin.com/company/bangladeshtoabroad'
};
---

<Layout title="About Us">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 space-y-12 sm:space-y-16 md:space-y-20">
    <!-- Mission Statement Block -->
    <div class="backdrop-blur-md bg-[#f0f9ff] rounded-3xl p-6 sm:p-8 md:p-12 shadow-md border border-white/20">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">Our Mission</h1>
      <p class="text-base sm:text-lg text-gray-600 mb-8 sm:mb-12">
        Bangladesh to Abroad is dedicated to empowering Bangladeshi students with comprehensive information about international educational opportunities. We believe that access to quality education should know no boundaries.
      </p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-10">
        {[
          {
            title: "Comprehensive Information",
            description: "Curated details about scholarships, fellowships, and internships worldwide",
            icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />`
          },
          {
            title: "Updated Daily",
            description: "Fresh opportunities and deadlines updated every day",
            icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`
          },
          {
            title: "Free Resources",
            description: "All information and resources available at no cost",
            icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`
          }
        ].map(item => (
          <div class="flex flex-col items-center text-center p-6 sm:p-8 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <div class="text-primary-600 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={item.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{item.title}</h3>
            <p class="text-gray-600">{item.description}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Team Block -->
    <div class="backdrop-blur-md bg-[#f0f9ff] rounded-3xl p-6 sm:p-8 md:p-12 shadow-md border border-white/20">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8">Meet Our Team</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-10">
        {teamMembers.map(member => (
          <div class="flex flex-col items-center text-center bg-white p-6 sm:p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <img
              src={member.image}
              alt={member.name}
              class="w-24 h-24 rounded-full mb-4"
              width="96"
              height="96"
            />
            <h3 class="text-xl font-semibold text-gray-900">{member.name}</h3>
            <p class="text-primary-600 mb-4 mt-2">{member.role}</p>
            <p class="text-gray-600">{member.description}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Contact Block -->
    <div class="backdrop-blur-md bg-[#f0f9ff] rounded-3xl p-6 sm:p-8 md:p-12 shadow-md border border-white/20">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8 sm:mb-12">Get in Touch</h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12">
        <div class="space-y-6">
          <h3 class="text-xl font-semibold text-gray-900">Contact Information</h3>
          <div class="space-y-6">
            <p class="flex items-center text-gray-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {contactInfo.email}
            </p>
            <div class="flex space-x-4">
              <a href={contactInfo.facebook} class="text-primary-600 hover:text-primary-700 transition-colors p-2 hover:bg-primary-50 rounded-full" target="_blank" rel="noopener noreferrer">
                <span class="sr-only">Facebook</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                </svg>
              </a>
              <a href={contactInfo.twitter} class="text-primary-600 hover:text-primary-700 transition-colors p-2 hover:bg-primary-50 rounded-full" target="_blank" rel="noopener noreferrer">
                <span class="sr-only">Twitter</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                </svg>
              </a>
              <a href={contactInfo.linkedin} class="text-primary-600 hover:text-primary-700 transition-colors p-2 hover:bg-primary-50 rounded-full" target="_blank" rel="noopener noreferrer">
                <span class="sr-only">LinkedIn</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-xl p-6 sm:p-8 shadow-sm">
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
              <input type="text" name="name" id="name" class="mt-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
              <input type="email" name="email" id="email" class="mt-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
              <textarea name="message" id="message" rows="4" class="mt-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"></textarea>
            </div>
            <button type="submit" class="w-full bg-primary-600 text-white py-3 px-6 rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</Layout>